---
export interface Props {
	title: string;
}

const { title } = Astro.props;
import '../styles/style.css';
import '../styles/prism-nord.css';
import Navigation from '../layouts/Navigation.astro';
import SiteTitle from '../layouts/SiteTitle.astro';
import Socials from '../layouts/Socials.astro';
import Footer from '../layouts/Footer.astro';
---

<!DOCTYPE html>
<html lang="en-US">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>{title}</title>
  <meta name="description" content="University Student | Computer Scientist | Gamer | Hardware Tinkerer"> <!-- Description for SEO -->
  <meta name="keywords" content="Homelab, C++, Code, Nerd, Computers">  <!-- Keywords for SEO -->
  <meta name="viewport" content="width=device-width, initial-scale=1">  <!-- Mobile Friendly -->
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> <!-- Preconnect to Google Fonts -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico"> <!-- Favicon -->
</head>
	<body>
		<div id="siteGrid">
			<header id="siteHeader">
        <div class="headerDiv">

          <SiteTitle />

          <Navigation />

          <div class="socialsTop">
            <Socials />
          </div>
          
        </div>
      </header>
      
      <main class="main" id="siteMain">

        <div class="socialsMobile">
          <Socials />
        </div>

        <slot />
    
      </main>
      <Footer />
		</div>

	</body>
</html>